{% extends 'base.html.twig' %}
{% block pageHeader %} {{ pageHeader }} {% endblock %}
{% block subHeader %} {{ subHeader }} {% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Tilte</th>
            <th>Details</th>
            <th>Lock</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.project.title }}</td>
                <td><a href="{{ path('show_project',{'project': project.project.id}) }}"><span
                                class="fa fa-eye"></span></a></td>

                <td><a href="{{ path('turn_project_lock',{'project': project.project.id}) }}">
                        {% if project.project.lock %}
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        {% else %}
                            <i class="fa fa-unlock" aria-hidden="true"></i>
                        {% endif %}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

