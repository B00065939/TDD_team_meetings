{% extends 'base.html.twig' %}
{% block pageHeader %} {{ pageHeader }} {% endblock %}
{% block subHeader %} {{ subHeader }} {% endblock %}

{% block body %}
    <div class="col-md-6">
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button type="submit" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i> Create
    </button>
    {{ form_end(form) }}
    <hr>
    <table  class="table table-striped">
        <caption>Current Project roles</caption>

    {% for role in roles %}
        <tr>
        {% if role.name == "Project Leader" or role.name == "Project Secretary" or role.name == "Project Supervisor" or role.name == "Project Member" %}
            <td colspan="2">{{ role.name }}</td>
        {% else %}
            <td colspan="2">{{ role.name }}</td>

            <td><a href="{{ path('delete_role',{'projectRole': role.id}) }}"><span
                          class="glyphicon glyphicon-trash"></span></a></td>
            {%  endif %}
         </tr>
    {% endfor %}
    </table>
            </div>
            {% endblock %}