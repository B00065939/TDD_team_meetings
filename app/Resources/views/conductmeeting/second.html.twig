{% extends 'base.html.twig' %}
{% block pageHeader %} {{ pageHeader }} {% endblock %}
{% block subHeader %} {{ subHeader }} {% endblock %}

{% block body %}
    <ul>
        <li>Current agenda item is : {{ agendaItem.sequenceNo }} of {{ countAI }} <a href="{% if nextAI is not null %}
                                {{ path('next_agenda_on_meeting', {'meeting': meeting.id , 'agendaItem' : nextAI.id}) }}
                                {% endif %}{% if nextAI is null %}#{% endif %}"><i
                        class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Continue</a></li>
    </ul>
    <p>{{ agendaItem.description }}</p>
    <table class="table table-striped">
        <caption>Agenda items list</caption>
        <thead>
        <tr>
            <td>Sequence No</td>
            <td>Title</td>
            <td>Description</td>
        </tr>
        </thead>
        <tbody>
        {% for aItem in agreedAgenda %}
            <tr>
                <td>{{ aItem.sequenceNo }}</td>
                <td>{{ aItem.title }}</td>
                <td>{{ aItem.description }}</td>
              </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}