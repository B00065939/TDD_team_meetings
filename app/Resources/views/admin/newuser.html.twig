{% extends 'base.html.twig' %}
{% block pageHeader %} {{ pageHeader }} {% endblock %}
{% block subHeader %} {{ subHeader }} {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                {{ form_start(form) }}
                {{ form_row(form.fullName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first, {
                    'label': 'Password'
                }) }}
                {{ form_row(form.plainPassword.second,{
                    'label': 'Repeat Password'
                }) }}
                {{ form_row(form.roles) }}
                <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}