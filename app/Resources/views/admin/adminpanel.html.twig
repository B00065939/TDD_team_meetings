{% extends 'base.html.twig' %}
{% block pageHeader %} {{ pageHeader }} {% endblock %}
{% block subHeader %} {{ subHeader }} {% endblock %}
{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.fullName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join }}</td>
                <td><a href="{{ path('edit_user',{'userID': user.ID}) }}">
                        <span class="glyphicon glyphicon-edit"></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

